---
import type { Categories } from "@/types"

import Layout from "@/layouts/base-layout.astro"

interface Props {
	category: Categories
	description: string
	publishedAt: string
	title: string
}

const { category, description, publishedAt, title } = Astro.props
---

<Layout description={description} label={category} publishedAt={publishedAt} revisitAfter="180 days" title={title}>
	<article
		class="max-w-none xat-typo prose prose-truegray dark:prose-invert"
	>
		<slot />
	</article>
</Layout>
