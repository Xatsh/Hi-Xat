---
interface Props {
	description: string
	revisitAfter: string
}

const { description, revisitAfter } = Astro.props
---

<meta charset="UTF-8" />
<meta
	content={description}
	name="description"
/>
<meta
	content="width=device-width, initial-scale=1.0"
	name="viewport"
/>
<meta content={revisitAfter} name="revisit-after" />
<meta content="Xat" name="author" />
<meta
	content={Astro.generator}
	name="generator"
/>
<link href="/sitemap-index.xml" rel="sitemap" />
<link
	href="/favicon.svg"
	rel="icon"
	type="image/svg+xml"
/>

