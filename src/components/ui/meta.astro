---
interface Props {
  description: string
  keywords: string[]
  revisitAfter: string
}

const { description, keywords, revisitAfter } = Astro.props
---

<meta charset="UTF-8" />
<meta
  content={description}
  name="description"
/>
<meta
  content="width=device-width, initial-scale=1.0"
  name="viewport"
/>
<meta content={revisitAfter} name="revisit-after" />
<meta content="Xat" name="author" />
<meta content={keywords.join(', ')} name="keywords" />
<meta
  content="chrome=1"
  http-equiv="X-UA-Compatible"
/>
<meta
  content={Astro.generator}
  name="generator"
/>
<link
  href="/favicon.svg"
  rel="icon"
  type="image/svg+xml"
/>

